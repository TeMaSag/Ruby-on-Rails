<h1>Listing libraries</h1>
<%= link_to 'New library', new_library_path %>
<table>
  <tr>
    <th>Номер</th>
    <th>Имя</th>
    <th>Адрес</th>
    <th colspan="3"></th>
  </tr>

  <% @libraries.each do |library| %>
    <tr>
      <td><%= library.number %></td>
      <td><%= library.name %></td>
      <td><%= library.adress %></td>
      <td><%= link_to 'Show', library_path(library) %></td>
      <td><%= link_to 'Edit', edit_library_path(library) %></td>
      <td class='delete'><%= link_to 'X', library_path(library),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Home', controller: 'home' %></td>
    </tr>
  <% end %>
</table>