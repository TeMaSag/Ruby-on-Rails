<h1>Listing books</h1>
<%= link_to 'New book', new_book_path %>
<table>
  <tr>
    <th>Библиотека</th>
    <th>Название книги</th>
    <th>Автор</th>
    <th>Шифр</th>
    <th>Издательство</th>
    <th>Цена</th>
    <th>Дата поступления</th>
    <th colspan="3"></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.Library %></td>
      <td><%= book.TitleOfTheBook %></td>
      <td><%= book.author %></td>
      <td><%= book.cipher %></td>
      <td><%= book.publishing_house %></td>
      <td><%= book.price %></td>
      <td><%= book.receipt_date %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td class='delete'><%= link_to 'X', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>